{
  "name": "file-timestamp-stream",
  "version": "0.3.1",
  "description": "Writing stream with file rotating based on timestamp",
  "main": "lib/file-timestamp-stream.js",
  "typings": "lib/file-timestamp-stream.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/dex4er/js-file-timestamp-stream"
  },
  "keywords": [
    "stream",
    "rotate",
    "timestamp"
  ],
  "author": "Piotr Roszatycki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dex4er/js-file-timestamp-stream/issues"
  },
  "homepage": "http://github.com/dex4er/js-file-timestamp-stream",
  "engines": {
    "node": ">=4.0.0"
  },
  "dependencies": {
    "ultra-strftime": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^9.4.0",
    "chai": "^4.1.2",
    "delay": "^2.0.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3",
    "tap": "^11.1.0",
    "tap-given": "^0.6.0"
  },
  "scripts": {
    "pretest": "standard --verbose | snazzy",
    "test": "tap test/*.js",
    "test:coverage": "npm test -- --coverage",
    "test:onchange:lcovonly": "npm run -s test-coverage -- -R min --coverage-report lcovonly; onchange '**/*.js' -- npm run -s test-coverage -- -R min --coverage-report lcovonly",
    "update": "npm run update:upgrade && npm run update:reinstall",
    "update:upgrade": "ncu --upgrade --upgradeAll",
    "update:reinstall": "rm -f package-lock.json && rm -rf node_modules && npm cache clear --force && npm install"
  },
  "standard": {
    "globals": [
      "After",
      "And",
      "Feature",
      "Given",
      "Scenario",
      "Then",
      "When"
    ]
  },
  "nyc": {
    "exclude": []
  }
}
